␀/* File Explorer Enhancements */
.custom-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: rgba(99, 102, 241, 0.5) rgba(30, 41, 59, 0.3);
}

.custom-scrollbar::-webkit-scrollbar {
  width: 6px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: rgba(30, 41, 59, 0.3);
  border-radius: 3px;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, rgba(99, 102, 241, 0.6), rgba(147, 51, 234, 0.6));
  border-radius: 3px;
  transition: background 0.2s ease;
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(180deg, rgba(99, 102, 241, 0.8), rgba(147, 51, 234, 0.8));
}

/* File tree animations */
@keyframes file-item-enter {
  from {
    opacity: 0;
    transform: translateX(-10px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.tree-element {
  animation: file-item-enter 0.3s ease-out;
}

/* Enhanced dropdown animations */
@keyframes dropdown-slide {
  from {
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.file-tree .absolute {
  animation: dropdown-slide 0.2s ease-out;
}

/* File status glow effects */
@keyframes status-pulse {
  0%, 100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}

.tree-element .bg-gradient-to-r:not(:hover) {
  animation: status-pulse 3s ease-in-out infinite;
}
